#!/usr/bin/env bash
# Configures nginx server so /redirect_me redirects to another page
redirect="server_name localhost;\n\n\tlocation /redirect_me {\n\t\trewrite ^https://www.youtube.com/watch?v=oH7jPAvFTU8 permanent;\n\t}"
sed -i "s|server_name localhost;|$redirect|" /etc/nginx/sites-available/default
sudo nginx -s reload
